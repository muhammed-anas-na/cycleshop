	<script>

		 function addToWishList(proId){
        $.ajax({
            url:'/add-to-wishlist',
            method:'post',
            data:{
                proId
            },
            success:(response)=>{
            
                Swal.fire({
                    title: 'WISHLIST',
                    text: 'Product added to wishlist.',
                    icon: 'success',
                    timer: 5000
                })
            }
        })
    }

		function addToCart(proId){
			$.ajax({
				url:'/add-to-cart/'+proId,
				method:'post',
				data:{
					quantity:1,
					size:'small'
				},
				success(response){
					if(response == true){
						Swal.fire({
						title: 'CART',
						text: 'Product ADDED TO CART.',
						icon: 'SUCCESSS',
						timer: 5000
					})
					}else{
						Swal.fire({
						title: 'STOCK!',
						text: 'Product is out of stock.',
						icon: 'error',
						timer: 5000
					})
					}
				}
				
			})
		}
